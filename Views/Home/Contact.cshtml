@model BuildBuddy.Models.Feedback

@{
    ViewBag.Title = "Contact";

    var feedbacksubmit = ViewBag.feedbacksubmit as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/wwwroot/css/contact.css">
</head>
<body>

    <br />
    <br />
    <br />

    <section class="contact-section">
        <div class="contact-bg">
            <h3>Get in Touch with Us</h3>
            <h2>contact us</h2>
            <div class="line">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <p class="text">
                At <b><i>BUILD BUDDY</i></b>, we're here to make your PC dreams a reality. Contact us for personalized recommendations, expert advice, and top-tier customer service. Let's create the ultimate PC setup together!"
            </p>
        </div>

        

        <div class="contact-body">
            <div class="contact-info">
                <div>
                    <span><i class="fas fa-mobile-alt"></i></span>
                    <span>Phone No.</span>
                    <span class="text"> +91 9327286152</span>
                </div>
                <div>
                    <span><i class="fas fa-envelope-open"></i></span>
                    <span>E-mail</span>
                    <span class="text">buildbuddy0612@gmail.com</span>
                </div>
                <div>
                    <span><i class="fas fa-map-marker-alt"></i></span>
                    <span>Address</span>
                    <span class="text">Royal Acres, Vadsar,<br />Vadodara, Gujarat</span>
                </div>
                <div>
                    <span><i class="fas fa-clock"></i></span>
                    <span>Opening Hours</span>
                    <span class="text">Monday - Friday<br />(9:00 AM to 5:00 PM)</span>
                </div>
            </div>

            <div style="text-align: center;">
                <h1>Feedback Form</h1>
            </div>

            <div class="contact-form">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        @if (!string.IsNullOrEmpty(feedbacksubmit))
                        {
                            <script>
                        alert('@feedbacksubmit');
                            </script>
                        }
                    </div>

                    <div>

                        <div style="display: inline-block;">
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "First Name" })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", style = "color: red;" })
                        </div>
                        <div style="display: inline-block;">
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Last Name" })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger", style = "color: red;" })
                        </div>

                    </div>
                    <div>

                        <div style="display: inline-block;">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", style = "color: red;" })
                        </div>
                        <div style="display: inline-block;">
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Phone Number" })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger", style = "color: red;" })
                        </div>

                    </div>

                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows = 4, style = "resize: none;", placeholder = "Message" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger", style = "color: red;" })

                    <br />
                    <br />

                    <input type="submit" class="send-btn" value="send message">
                }

                <div class="contact_pic">
                    <img src="~/wwwroot/images/pixelcut-export.png" alt="">
                </div>
            </div>
        </div>
        <div class="map">

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3692.3906020336976!2d73.17515725000001!3d22.263188999999997!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395fc67a09c76471%3A0xcab5f9eeffb017e3!2sRoyal%20Acres%2C%20Vadsar%2C%20Kalali%2C%20Vadodara%2C%20Gujarat!5e0!3m2!1sen!2sin!4v1716916095431!5m2!1sen!2sin" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
