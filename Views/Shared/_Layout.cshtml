@{
    bool isLoggedIn = true;
    if (string.IsNullOrEmpty(User.Identity.Name))
    {
        isLoggedIn = false;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")  
    <link rel="stylesheet" href="~/wwwroot/css/navbar.css">
    <link rel="stylesheet" href="~/wwwroot/css/footer.css" />
    <link href="https://fonts.googleapis.com/css?family=Slabo+27px" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Play&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>
<body>
    <div>
        <nav>
            <div class="navbar">
                <i class='bx bx-menu'></i>
                <a href="/"><div class="logo"><img src="~/wwwroot/images/Build Buddy.gif" alt="Logo"></div></a>
                <div class="nav-links">
                    <div class="sidebar-logo">
                        <img src="~/wwwroot/images/Build Buddy.gif" alt="Logo">
                        <i class='bx bx-x'></i>
                    </div>
                    <ul class="links">
                        <li>
                            <a href="#">Components</a>
                            <i class='bx bxs-chevron-down htmlcss-arrow arrow  '></i>
                            <ul class="htmlCss-sub-menu sub-menu">

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Processor", "Component", "Component", new { type = "cpu" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Graphic Card", "Component", "Component", new { type = "gpu" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Memory(Ram)", "Component", "Component", new { type = "ram" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Storage", "Component", "Component", new { type = "storage" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Motherboard", "Component", "Component", new { type = "motherboard" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Power Supply", "Component", "Component", new { type = "power_supply" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Cabinet", "Component", "Component", new { type = "cabinet" }, null)
                                    </span>
                                </li>

                                <li class="more">
                                    <span>
                                        @Html.ActionLink("Cooler", "Component", "Component", new { type = "cooler" }, null)
                                    </span>
                                </li>

                            </ul>
                        </li>
                        <li>@Html.ActionLink("Custom Build", "Index", "PCBuild")</li>
                        <li>@Html.ActionLink("Pre-Built PC's", "PC", "PCLaptop")</li>
                        <li>@Html.ActionLink("Laptops", "Laptop", "PCLaptop")</li>
                        <li>@Html.ActionLink("Compare Components", "Compare", "Home")</li>
                        <li>@Html.ActionLink("Build Guide", "BuildGuide", "Home")</li>
                    </ul>
                </div>
                <div class="navbar-login">
                    @{
                        if (isLoggedIn)
                        {
                            <ul class="links">
                                <li>@Html.ActionLink("Hello " + User.Identity.Name, "Profile", "Account")</li>
                                <li>@Html.ActionLink("Signout", "Signout", "Account")</li>
                            </ul>
                        }
                        else
                        {
                            //<button class="glow-on-hover" type="button">Login / Register</button>
                            @Html.ActionLink("Register", "Signup", "Account", null, new { @class = "glow-on-hover" })
                        }
                    }

                </div>
            </div>
        </nav>
    </div>


    @RenderBody()

    @if (ViewBag.HideFooter == null || !ViewBag.HideFooter)
    {
        <footer>
            <div class="footer">
                <h3 style="color: white;">Follow Us</h3>
                <div class="row">
                    <a href="https://www.facebook.com/people/BuildBuddy-Nation/61559923515190/"><i class="fa fa-facebook"></i></a>
                    <a href="https://www.instagram.com/buildbuddynation/?hl=en"><i class="fa fa-instagram"></i></a>
                    <a href="https://www.youtube.com/channel/UCNAytLaj29OgU0STHkX3p-g"><i class="fa fa-youtube"></i></a>
                </div>

                <div class="row">
                    <ul>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    </ul>
                </div>

                <div class="row">
                    Copyright © 2024 BuildBuddy - All rights reserved
                </div>
            </div>
        </footer>
    }

    <script src="~/wwwroot/js/nav.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
